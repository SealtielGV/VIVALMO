<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="unspsc_view_form" model="ir.ui.view">
            <field name="name">product.unspsc.code.form</field>
            <field name="model">product.unspsc.code</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <group>
                                <field name="code"/>
                                <field name="name"/>
                                <field name="applies_to"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    
        <record id="unspsc_view_tree" model="ir.ui.view">
            <field name="name">>product.unspsc.code.tree</field>
            <field name="model">product.unspsc.code</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
                    <field name="applies_to"/>
                </tree>
            </field>
        </record>

        <record id="unspsc_act_window" model="ir.actions.act_window">
            <field name="name">Código UNSPSC</field>
            <field name="res_model">product.unspsc.code</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Agrega un nuevo código UNSPSC
                </p>
            </field>
        </record>

        <menuitem id="menu_unspsc" name="Código UNSPSC" parent="account.account_account_menu" action="unspsc_act_window" sequence="11"/>
    </data>
</odoo>