<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="account_cfdi_wizard_link_cfdi_form_view" model="ir.ui.view">
        <field name="name">account.cfdi.wizard.link.cfdi</field>
        <field name="model">account.cfdi.wizard.link.cfdi</field>
        <field name="arch" type="xml">
            <form>
                <h2 class="text-center mb-3 pb-3" style="font-weight:bold;color:red;" attrs="{'invisible':[('equal', '=', False)]}">Advertencia: El Total del XML no corresponde con el Total de la Factura</h2>
                <group >

                    <field name="subtotal" invisible="1"/>
                    <field name="rfc" invisible="1"/>
                    <field name="equal" invisible="1"/>
                    <field name="invoice_id_search" options="{'no_create': True}"/>
                </group>
                
                <div invisible="1">
                    List invoices
                    <span class="oe_inline" > in
                        <strong><field name="invoice_ids"  /></strong>.
                    </span>
                   
                </div>
                <div invisible="1">
                    Attachment
                    <span class="oe_inline" > in
                        <strong><field name="attachment_ids"  /></strong>.
                    </span>
                   
                </div>
                
                <footer>
                    <button name="associate_xml" string="Associar XML" class="btn-primary" type="object"/>
                    <button string="Cancelar" name="on_cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    
</odoo>
