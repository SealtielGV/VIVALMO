<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_account_auditor_descarga_sat_fiel_conf" model="ir.ui.view">
            <field name="name">res config settings descarga sat</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="account.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <div class="app_settings_block" position="after">
                    <h2 groups="account.group_account_user">Configuracion Descarga Masiva SAT</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane"/>
                            <div class="o_setting_right_pane" id="fiel_panel">
                                <span class="o_form_label">FIEL</span>
                                <div class="text-muted">
                                    Seleccione los Archivos Electronicos de su Firma Electronica
                                </div>
                                <div class="content-group" id="fiel_data">
                                    <div class="row mt16">
                                        <label for="certificate_file" class="col-lg-3 o_light_label"/>
                                        <field name="certificate_file" />
                                        <label for="certificate_key_file" class="col-lg-3 o_light_label"/>
                                        <field name="certificate_key_file" />
                                    </div>
                                </div>
                                <br/>
                                <span class="o_form_label">Contrase√±a FIEL</span>
                                <div class="content-group" id="fiel_password">
                                    <div class="row mt16">
                                        <label for="certificate_password" class="col-lg-3 o_light_label"/>
                                        <field name="certificate_password"  password="1"/>
                                    </div>
                                </div>
                                <br/>

                                
                                <span class="o_form_label">Planificacion de Descarga</span>
                                <div class="content-group" id="download_automatically">
                                    <div class="row mt16">
                                        <label for="download_automatically" class="col-lg-3 o_light_label"/>
                                        <field name="download_automatically"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="certificate_file_pem" invisible="1"/>
                            </div>
                            <div class="o_setting_right_pane" id="credenciales_pac">
                                <label for="certificate_file_pem" invisible="1"/>
                                <div class="text-muted">
                                    Archivo Cer Publico
                                </div>
                            </div>
                            <div class="o_setting_left_pane">
                                <field name="certificate_key_file_pem" invisible="1"/>
                            </div>
                            <div class="o_setting_right_pane" id="credenciales_pac">
                                <label for="certificate_key_file_pem"/>
                                <div class="text-muted">
                                    Archivo Key Publico
                                </div>
                            </div>
                            <div class="o_setting_left_pane">
                                <field name="certificate_pfx_file" invisible="1"/>
                            </div> 
                            <div class="o_setting_right_pane" id="credenciales_pac">
                                <label for="certificate_pfx_file"/>
                                <div class="text-muted">
                                    Llave PFX
                                </div>
                            </div>
                            <div class="o_setting_right_pane" id="credenciales_pac">
                                <div class="text-muted">
                                    No. Serie y Vigencia
                                </div>
                                <label for="fiel_serial_number" class="col-lg-3 o_light_label"/>
                                <field name="fiel_serial_number" />
                                <label for="fiel_date_start" class="col-lg-3 o_light_label"/>
                                <field name="fiel_date_start" />
                                <label for="fiel_date_end" class="col-lg-3 o_light_label"/>
                                <field name="fiel_date_end" />
                            </div>                           
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</openerp>