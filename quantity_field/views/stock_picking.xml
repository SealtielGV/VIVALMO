<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="stock_picking_form_inherit_quantity_field">
            <field name="name">stock.picking.form</field>
            <field name="model">stock.picking</field>
            <field name="inherit_id" ref="stock.view_picking_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='move_ids_without_package']" position="before">
                    <div class="row mb-2">
                        <div class="col-6 text-center">
                            <label for="demand_qty_move" string="Demanda"/>
                           <field name="demand_qty_move"/>
                        </div>
                        <div class="col-6 text-center">
                            <label for="done_qty_move" string="Hecho"/>
                            <field name="done_qty_move"/>
                        </div>
                    </div>
                </xpath>
                <xpath expr="//field[@name='move_line_ids_without_package']" position="before">
                    <div class="row mb-2">
                        <div class="col-6 text-center">
                            <label for="demand_qty_move_line" string="Demanda"/>
                           <field name="demand_qty_move_line"/>
                        </div>
                        <div class="col-6 text-center">
                            <label for="done_qty_move_line" string="Hecho"/>
                            <field name="done_qty_move_line"/>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>