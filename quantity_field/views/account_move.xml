<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="account_move_form_inherit_fields">
            <field name="name">account.move.form.inherit.fields</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_line_ids']" position="before">
                    <div class="row mb-2"> 
                        <div class="col-4 text-center"> </div>
                        <div class="col-4 text-center">
                            <label for="qty_total" string="Cantidad"/>
                            <field name="qty_total"/>
                        </div>
                        <div class="col-4 text-center"></div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>